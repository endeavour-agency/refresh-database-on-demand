{
    "version": "1.0.0",
    "name": "endeavour-agency/refresh-database-on-demand",
    "description": "This packages offers a drop-in replacement for Laravel's RefreshDatabase trait, which only refreshes the database when migrations have actually changed.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/endeavour-agency/refresh-database-on-demand",
    "keywords": [
        "laravel",
        "migrations",
        "refresh",
        "queries",
        "database",
        "on-demand",
        "refresh-database"
    ],
    "authors": [
        {
            "name": "Dennis Koster",
            "email": "dennis.koster@endeavour.nl",
            "homepage": "https://github.com/dennis-koster"
        }
    ],
    "autoload": {
        "psr-4": {
            "EndeavourAgency\\RefreshDatabaseOnDemand\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "orchestra/testbench": "^9"
    }
}
